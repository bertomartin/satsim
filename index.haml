!!!5
%head
  %title Orbits 3D - HTML5 Satellite Simulator 
  %link{"rel" => "stylesheet", "href" => "style.css", "type" => "text/css"}
  %link{"rel" => "stylesheet", "href" => "jquery-ui-custom.css", "type" => "text/css"}

  %script{"src" => "https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js", "type" => "text/javascript"}
  %script{"src" => "jquery-ui-custom.js", "type" => "text/javascript"}
  %script{"src" => "three.min.js", "type" => "text/javascript"}
  %script{"src" => "FirstPersonControls.js", "type" => "text/javascript"}
  %script{"src" => "renderer.js", "type" => "text/javascript"}
  %script{"src" => "sim.js", "type" => "text/javascript"}
  %script{"src" => "app.js", "type" => "text/javascript"}
%body
  #ui
    #options
      %h2 Options

      #controls
        .slider-box.option#timeAcceleration
          .slider
          .value
          %label Time Acceleration
      #buttons.btn-group
        .btn#play.active <img src='img/play.png'/> 
        .btn#pause <img src='img/pause.png'/>
        .btn#stop <img src='img/stop.png'/>
    #info
      #about
        :markdown
          ## Orbits 3D
          <p class='center'>Satellite simulator</p>
    #overhead
      #options-button <img src='img/options.png'/>
      %header
        %h1 Orbits
        %p#desc HTML5 Satellite Simulator 
        %p#instruction Click for more info
    #bottom
      #flight_data
      #orbit_data

  #sim
